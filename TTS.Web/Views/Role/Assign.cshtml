@model RoleAssignDto

@{
    ViewBag.Title = "Assign Role";
    Layout = "_Layout";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

<h4>Assign Role</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Assign" asp-controller="Role" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="UserId"/>
            </div>
            <div class="form-group">
                <ejs-dropdownlist id="employees" dataSource="@Model.Roles" placeholder="Select a role"
                                  ejs-for="@Model.Role">
                    <e-dropdownlist-fields text="Name" value="Name"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div class="col-md-3">
        <h5>Roles of the user</h5>
        <ejs-listbox id="listbox" dataSource="@Model.UserRoles"></ejs-listbox>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="User">Back to List</a>
</div>

</body>
</html>